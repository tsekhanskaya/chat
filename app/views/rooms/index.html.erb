<%= turbo_stream_from :rooms %>

<%= turbo_frame_tag :rooms do %>
  <%= render @rooms %>
<% end %>

<% if user_signed_in? %>
  <%= form_with model: @new_room, class: "mt-4" do |f| %>

    <%= f.submit "Create room",
                 class: "group relative flex w-32 justify-center rounded-md
                 border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white
                 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500
                 focus:ring-offset-2 cursor-pointer"%>

  <% end %>
<% end %>